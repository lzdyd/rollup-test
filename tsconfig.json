{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "lib": ["es2015"],
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
